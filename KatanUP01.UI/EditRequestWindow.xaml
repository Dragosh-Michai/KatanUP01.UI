<Window x:Class="KatanUP01.UI.EditRequestWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Заявка на ремонт" 
        Height="450" Width="500"
        WindowStartupLocation="CenterOwner">

    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Адрес -->
        <Label Grid.Row="0" Content="Адрес:"/>
        <ComboBox x:Name="cbAddress" Grid.Row="1" Margin="0,0,0,10"/>

        <!-- ФИО заявителя -->
        <Label Grid.Row="2" Content="ФИО заявителя:"/>
        <TextBox x:Name="txtApplicantName" Grid.Row="3" Margin="0,0,0,10"/>

        <!-- Телефон -->
        <Label Grid.Row="4" Content="Телефон:"/>
        <TextBox x:Name="txtPhone" Grid.Row="5" Margin="0,0,0,10"/>

        <!-- Описание -->
        <Label Grid.Row="6" Content="Описание проблемы:"/>
        <TextBox x:Name="txtDescription" Grid.Row="7" 
                 Height="80" Margin="0,0,0,10" 
                 AcceptsReturn="True" TextWrapping="Wrap"/>

        <!-- Исполнитель -->
        <Label Grid.Row="8" Content="Исполнитель:"/>
        <ComboBox x:Name="cbEmployee" Grid.Row="9" Margin="0,0,0,10"/>

        <!-- Статус -->
        <Label Grid.Row="10" Content="Статус:"/>
        <ComboBox x:Name="cbStatus" Grid.Row="11" Margin="0,0,0,20"/>

        <!-- Кнопки -->
        <StackPanel Grid.Row="12" Orientation="Horizontal" HorizontalAlignment="Right">
            <Button x:Name="btnCancel" Content="Отмена" Width="80" Margin="5" Click="BtnCancel_Click"/>
            <Button x:Name="btnSave" Content="Сохранить" Width="80" Margin="5" 
                    Background="#67BA80" Foreground="White" Click="BtnSave_Click"/>
        </StackPanel>
    </Grid>
</Window>